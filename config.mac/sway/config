# Sway Configuration - Mac Profile

# Variables
set $mod Mod4
set $left h
set $down j
set $up k
set $right l
set $term kitty
set $menu "wofi --show drun --allow-images --prompt 'Search...'"
set $alt Mod1
set $EDITOR nvim

# Startup Applications
exec --no-startup-id autotiling
exec $HOME/.config/sway/scripts/start-gestures.sh
exec $HOME/.config/sway/scripts/start-idle.sh &
exec swayosd-server
exec lxpolkit
exec /opt/Mullvad\ VPN/mullvad-vpn
exec $HOME/.config/sway/scripts/initial-wallpaper.sh
exec $HOME/.local/bin/sway-wallpaper-daemon.sh &
# Autostart system applets (only if available)
exec_always --no-startup-id 'command -v nm-applet && nm-applet --indicator'
exec_always --no-startup-id 'command -v blueman-applet && blueman-applet'
exec_always --no-startup-id 'command -v udiskie && udiskie --tray'

xwayland enable

# Appearance
default_border pixel 3
default_floating_border pixel 3
titlebar_border_thickness 0
titlebar_padding 0
for_window [class=".*"] border pixel 3
for_window [app_id=".*"] border pixel 3
gaps inner 5
gaps outer 5
smart_borders on
smart_gaps on

# Colors (Nord Theme)
client.focused          #88C0D0 #434C5E #ECEFF4 #88C0D0   #88C0D0
client.unfocused        #2E3440 #2E3440 #D8DEE9 #2E3440   #2E3440
client.focused_inactive #3B4252 #3B4252 #D8DEE9 #3B4252   #3B4252
client.urgent           #BF616A #BF616A #ECEFF4 #BF616A   #BF616A

# Output Configuration
output LVDS-1 mode 1280x800@60.223Hz

workspace 1 output LVDS-1
workspace 2 output LVDS-1
workspace 3 output LVDS-1
workspace 4 output LVDS-1
workspace 5 output LVDS-1
workspace 6 output LVDS-1
workspace 7 output LVDS-1
workspace 8 output LVDS-1
workspace 9 output LVDS-1
workspace 10 output LVDS-1



# Focus
focus_follows_mouse yes
workspace_auto_back_and_forth yes
seat seat0 hide_cursor when-typing enable
focus_on_window_activation focus

# Window Rules
for_window [app_id="pavucontrol"] floating enable
for_window [window_role="GtkFileChooserDialog"] floating enable
for_window [app_id="kitty"] opacity 0.85
for_window [title="Picture-in-Picture"] floating enable, sticky enable
for_window [title=".*[Ff]ile.*[Cc]hooser.*"] floating enable
for_window [title=".*[Oo]pen.*[Ff]ile.*"] floating enable
for_window [title=".*[Ss]ave.*[Ff]ile.*"] floating enable
for_window [app_id="floating-terminal"] floating enable, resize set width 80ppt height 60ppt

# Input
input "type:keyboard" {
    xkb_layout us
    xkb_numlock enable
}
input "type:touchpad" {
    tap enabled
    natural_scroll enabled
    dwt enabled
    tap_button_map lrm
    scroll_method two_finger
    accel_profile adaptive
    pointer_accel 0.3
}
input "5426:110:Razer_Razer_DeathAdder_Essential" {
    natural_scroll enabled
    accel_profile flat
}

# Key Bindings
bindsym $mod+Return exec $term
bindsym $mod+q kill
bindsym $mod+r exec $menu
bindsym $mod+e exec kitty ranger
bindsym $mod+Shift+c reload
bindsym $mod+Shift+e exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -B 'Yes, exit sway' 'swaymsg exit'

# Navigation
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Move
bindsym $mod+$alt+$left move left
bindsym $mod+$alt+$down move down
bindsym $mod+$alt+$up move up
bindsym $mod+$alt+$right move right
bindsym $mod+$alt+Left move left
bindsym $mod+$alt+Down move down
bindsym $mod+$alt+Up move up
bindsym $mod+$alt+Right move right

# Resize
bindsym $mod+Shift+$left resize shrink width 10px
bindsym $mod+Shift+$down resize grow height 10px
bindsym $mod+Shift+$up resize shrink height 10px
bindsym $mod+Shift+$right resize grow width 10px
bindsym $mod+Shift+Left resize shrink width 10px
bindsym $mod+Shift+Down resize grow height 10px
bindsym $mod+Shift+Up resize shrink height 10px
bindsym $mod+Shift+Right resize grow width 10px

# Workspaces
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10

bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 10

# Layout
bindsym $mod+b splith
bindsym $mod+v splitv
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+f fullscreen
floating_modifier $mod normal
bindsym $mod+Shift+space floating toggle
bindsym $mod+$alt+space floating enable, sticky toggle
bindsym $mod+space focus mode_toggle
bindsym $mod+a focus parent

# Scratchpad
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show

# Hardware Keys
bindsym --locked XF86AudioMute exec swayosd-client --output-volume mute-toggle
bindsym --locked XF86AudioLowerVolume exec swayosd-client --output-volume lower
bindsym --locked XF86AudioRaiseVolume exec swayosd-client --output-volume raise
bindsym --locked XF86AudioMicMute exec swayosd-client --input-volume mute-toggle
bindsym --locked XF86MonBrightnessDown exec swayosd-client --brightness lower
bindsym --locked XF86MonBrightnessUp exec swayosd-client --brightness raise

# MacBook function keys (F1-F12 without Fn modifier)
bindsym --locked F1 exec swayosd-client --brightness lower
bindsym --locked F2 exec swayosd-client --brightness raise
bindsym --locked F10 exec swayosd-client --output-volume mute-toggle
bindsym --locked F11 exec swayosd-client --output-volume lower
bindsym --locked F12 exec swayosd-client --output-volume raise
bindsym --locked XF86AudioPlay exec $HOME/.config/sway/scripts/media-control.sh play-pause
bindsym --locked XF86AudioPause exec $HOME/.config/sway/scripts/media-control.sh play-pause
bindsym --locked XF86AudioNext exec $HOME/.config/sway/scripts/media-control.sh next
bindsym --locked XF86AudioPrev exec $HOME/.config/sway/scripts/media-control.sh previous

# Screenshots
bindsym $mod+BackSpace exec $HOME/.config/sway/scripts/screenshot.sh select_save
bindsym $mod+Shift+BackSpace exec $HOME/.config/sway/scripts/screenshot.sh select_clipboard
bindsym Ctrl+BackSpace exec $HOME/.config/sway/scripts/screenshot.sh capture_focused_window
bindsym $mod+Alt+BackSpace exec $HOME/.config/sway/scripts/screenshot.sh full_screen

bar {
    swaybar_command waybar
}

include /etc/sway/config.d/*
